<nav class="w-full font-bold dark:bg-blue-800 bg-white px-2 py-2 shadow-lg">
    <p class="text-lg">
        <a href="/">
            <i class="fa-solid fa-globe-wifi"></i>
            <span class="ml-2">NoIPv6.wtf?</span>
        </a>
    </p>
</nav>
<div class="px-6 py-6 flex flex-col lg:flex-row">
    <div class="w-full lg:w-4/5">
        <div class="header mb-5">
            <h1 class="text-xl">Top 100 Websites</h1>
            <p class="text-md">Can these websites be reached via IPv6?</p>
            <div class="mt-3 flex gap-4 text-sm">
                <span class="px-3 py-1 bg-green-600 rounded-full">
                    <i class="fa-solid fa-circle text-green-100"></i> 
                    IPv6 Supported
                </span>
                <span class="px-3 py-1 bg-red-600 rounded-full">
                    <i class="fa-solid fa-circle text-red-100"></i> 
                    IPv6 Not Supported
                </span>
            </div>
        </div>
        <!-- IPv6 Supported Sites -->
        <div class="mb-8">
            <h2 class="text-lg font-semibold mb-3 text-green-400">
                <i class="fa-solid fa-check-circle"></i> IPv6 Supported
            </h2>
            <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-2">
                {{#each pingResults as |pingResult i|}}
                {{#if pingResult.ipv6}}
                <div class="dark:bg-slate-800 bg-white rounded-4xl p-3 border-l-4 border-green-600 shadow-sm">
                    <p><i class="fa-solid fa-circle text-green-600"></i> {{pingResult.number}}. {{pingResult.domain}}</p>
                </div>
                {{/if}}
                {{/each}}
            </div>
        </div>

        <!-- IPv6 Not Supported Sites -->
        <div>
            <h2 class="text-lg font-semibold mb-3 text-red-400">
                <i class="fa-solid fa-times-circle"></i> IPv6 Not Supported
            </h2>
            <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-2">
                {{#each pingResults as |pingResult i|}}
                {{#unless pingResult.ipv6}}
                <div class="dark:bg-slate-800 bg-white rounded-4xl p-3 border-l-4 border-red-600 shadow-sm">
                    <p><i class="fa-solid fa-circle text-red-600"></i> {{pingResult.number}}. {{pingResult.domain}}</p>
                </div>
                {{/unless}}
                {{/each}}
            </div>
        </div>
    </div>
    <div class="practiceWhatYouPreach w-full lg:w-1/5 mt-8 lg:mt-0 lg:ml-6 px-4 lg:px-0">
        <div class="header mb-5">
            <h1 class="text-xl">My Websites</h1>
            <p class="text-md">IPv6 Status of sites I run or help to operate</p>
            <div class="mt-3 flex flex-col gap-2 text-xs">
                <span class="px-2 py-1 bg-green-600 rounded-full text-center">
                    Supported
                </span>
                <span class="px-2 py-1 bg-red-600 rounded-full text-center">
                    Not Supported
                </span>
            </div>
        </div>
        
        <!-- IPv6 Supported Personal Sites -->
        <div class="mb-6">
            <h3 class="text-sm font-semibold mb-2 text-green-400">
                <i class="fa-solid fa-check-circle"></i> Supported
            </h3>
            <div class="grid grid-cols-1 gap-2">
                {{#each pingResultsMe as |pingResult i|}}
                {{#if pingResult.ipv6}}
                <div class="dark:bg-slate-800 bg-white rounded-4xl p-3 border-l-4 border-green-600 shadow-sm">
                    <p><i class="fa-solid fa-circle text-green-600"></i> {{pingResult.domain}}</p>
                </div>
                {{/if}}
                {{/each}}
            </div>
        </div>

        <!-- IPv6 Not Supported Personal Sites -->
        <div>
            <h3 class="text-sm font-semibold mb-2 text-red-400">
                <i class="fa-solid fa-times-circle"></i> Not Supported
            </h3>
            <div class="grid grid-cols-1 gap-2">
                {{#each pingResultsMe as |pingResult i|}}
                {{#unless pingResult.ipv6}}
                <div class="dark:bg-slate-800 bg-white rounded-4xl p-3 border-l-4 border-red-600 shadow-sm">
                    <p><i class="fa-solid fa-circle text-red-600"></i> {{pingResult.domain}}</p>
                </div>
                {{/unless}}
                {{/each}}
            </div>
        </div>
    </div>
</div>